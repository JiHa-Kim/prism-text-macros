{
  "manifest_version": 3,
  "name": "Monaco Text Macros",
  "version": "0.0.0.1",
  "description": "General purpose text and Obsidian-style LaTeX macros for Monaco editors. Works with OpenAI Prism.",
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://prism.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://prism.openai.com/*"
      ],
      "js": [
        "dist/content/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/content/pageBridge.js"
      ],
      "matches": [
        "https://prism.openai.com/*"
      ]
    }
  ],
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-snips": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Toggle snippet expansion"
    }
  },
  "background": {
    "service_worker": "dist/background/background.js"
  }
}