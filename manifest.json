{
  "manifest_version": 3,
  "name": "Prism LaTeX Snippets",
  "version": "0.2.0",
  "description": "Obsidian-like LaTeX snippet expansion for prism.openai.com",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://prism.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://prism.openai.com/*"
      ],
      "js": [
        "dist/content/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/content/pageBridge.js"
      ],
      "matches": [
        "https://prism.openai.com/*"
      ]
    }
  ],
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-snips": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Toggle snippet expansion"
    }
  },
  "background": {
    "service_worker": "dist/background/background.js"
  }
}